<% @title = '顧客詳細情報' %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <table class="attributes">
    <tr><th colspan="2">基本情報</th></tr>
    <% cp = CustomerPresenter.new(@customer, self) %>
    <tr><th>氏名</th><td><%= cp.full_name %></td></tr>
    <tr><th>フリガナ</th><td><%= cp.full_name_kana %></td></tr>
    <tr><th>生年月日</th><td class="date"><%= cp.birthday %></td></tr>
    <tr><th>性別</th><td><%= cp.gender %></td></tr>
    <tr><th>登録日時</th><td class="date"><%= cp.created_at %></td></tr>
    <tr><th>更新日時</th><td class="date"><%= cp.updated_at %></td></tr>
    <tr><th>個人電話番号(1)</th><td><%= cp.personal_phones[0] %></td></tr>
    <tr><th>個人電話番号(2)</th><td><%= cp.personal_phones[1] %></td></tr>
    <% if @customer.home_address %>
      <% home_ap = AddressPresenter.new(@customer.home_address, self) %>
      <tr><th colspan="2">自宅住所</th></tr>
      <tr><th>郵便番号</th><td><%= home_ap.postal_code %></td></tr>
      <tr><th>都道府県</th><td><%= home_ap.prefecture %></td></tr>
      <tr><th>市区町村</th><td><%= home_ap.city %></td></tr>
      <tr><th>町域、番地等</th><td><%= home_ap.address1 %></td></tr>
      <tr><th>建物名、部屋番号等</th><td><%= home_ap.address2 %></td></tr>
      <tr><th>自宅電話番号(1)</th><td><%= home_ap.phones[0] %></td></tr>
      <tr><th>自宅電話番号(2)</th><td><%= home_ap.phones[1] %></td></tr>
    <% end %>
    <% if @customer.work_address %>
      <% work_ap = AddressPresenter.new(@customer.work_address, self) %>
      <tr><th colspan="2">勤務先</th></tr>
      <tr><th>会社名</th><td><%= work_ap.company_name %></td></tr>
      <tr><th>部署名</th><td><%= work_ap.division_name %></td></tr>
      <tr><th>郵便番号</th><td><%= work_ap.postal_code %></td></tr>
      <tr><th>都道府県</th><td><%= work_ap.prefecture %></td></tr>
      <tr><th>市区町村</th><td><%= work_ap.city %></td></tr>
      <tr><th>町域、番地等</th><td><%= work_ap.address1 %></td></tr>
      <tr><th>建物名、部屋番号等</th><td><%= work_ap.address2 %></td></tr>
      <tr><th>勤務先電話番号(1)</th><td><%= work_ap.phones[0] %></td></tr>
      <tr><th>勤務先電話番号(2)</th><td><%= work_ap.phones[1] %></td></tr>
    <% end %>
  </table>
</div>
